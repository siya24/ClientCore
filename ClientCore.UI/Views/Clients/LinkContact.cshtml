@using ClientCore.UI.ViewModels
@model LinkContactDTO
@{
    List<GetContactDTO> contacts = (List<GetContactDTO>)ViewData["contacts"]!;
    ViewData["Title"] = "Link Contact";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Link Contact</h4>
        </div>
        <div class="card-body">
            <div class="tab-content mt-3" id="link-contact">
                <dl class="row">
                    <dt class="col-sm-3">Client Name</dt>
                    <dd class="col-sm-9">@ViewData["ClientName"]</dd>
                    <dt class="col-sm-3">Client Code</dt>
                    <dd class="col-sm-9">@ViewData["ClientCode"]</dd>
                </dl>

                <div class="row">
                    <div class="col-12">
                        @* Move the form to wrap all content including the button *@
                        <form asp-action="LinkContact" method="post">
                            @* Add hidden field for clientId *@
                            <input type="hidden" name="clientId" value="@ViewData["clientId"]" />

                            @if (contacts.Any())
                            {
                                <div class="col-md-4">
                                    <select name="contactId" class="form-select" required>
                                        <option value="">Select a contact</option>
                                        @foreach (var contact in contacts)
                                        {
                                            <option value="@contact.Id">@contact.FullName</option>
                                        }
                                    </select>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    No contacts available to link.
                                </div>
                            }

                            @* Move the button inside the form *@
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-action="Details" asp-route-id="@ViewData["clientId"]" class="btn btn-secondary">Back to Client</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>