@model IEnumerable<ClientCore.Business.DTOs.GetContactDTO>

@{
    ViewData["Title"] = "Contacts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Contacts</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="searchString" value="@ViewData["CurrentFiler"]" class="form-control" placeholder="Search Contacts..."/>
                </div>
                <div class="col-md-4">
                    <select name="contactFilter" class="form-select">
                        <option value="All Contacts"></option>
                        @* @foreach (var contact in ViewBag.Contacts)
                        {
                            <option value="@contact">@contact</option>
                        } *@
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

     @if (Model.Any())
     {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th class="text-left">Name</th>
                        <th class="text-left">Surname</th>
                        <th class="text-left">Email</th>
                        <th class="text-center">#Clients</th>
                        @* <th>Action</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-left">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-left">@Html.DisplayFor(modelItem => item.Surname)</td>
                            <td class ="text-left">@Html.DisplayFor(modeleItem => item.Email)</td>
                            <td class="text-center">@Html.DisplayFor(modeleItem => item.TotalClients)</td>
                            @* <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-controller="Clients" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                </div>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
     }
     else{
        <div class="alert alert-info">
            No contact(s) found.
        </div>
     }

</div>